.messages-group{"data-message_id": "#{message.id}"}
  .messages-group__detail
    .messages-group__detail--name
      = message.user.name
    .messages-group__detail--day
      = message.created_at.strftime("%Y年%m月%d日(%A) %H時%M分")
  .messages-group__comment
    - if message.content.present?
      %p.lower-message__content
        = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?